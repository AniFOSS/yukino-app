{
  "name": "yukino-desktop",
  "version": "0.0.2-0",
  "description": "Simple anime streamer.",
  "author": {
    "name": "ZYROUGE",
    "email": "zyrouge@hotmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zyrouge/yukino-app"
  },
  "scripts": {
    "vite:dev": "vite",
    "vite:serve": "vite preview",
    "vite:build": "rimraf ./dist/vite && vue-tsc --noEmit && vite build",
    "electron:icons": "electron-icon-builder --flatten --input=./resources/icon.png --output=./resources",
    "electron:start": "cross-env YUKINO_PLATFORM=\"electron\" electron environments/electron/main.js",
    "electron:dev": "cross-env YUKINO_PLATFORM=\"electron\" node scripts/electron-dev",
    "electron:pack": "cross-env DEBUG=\"electron-builder\" yarn electron:build --dir",
    "electron:build": "rimraf ./dist/electron && yarn electron:icons && cross-env YUKINO_PLATFORM=\"electron\" yarn vite:build && electron-builder --config environments/electron/builder.config.js",
    "electron:publish": "yarn electron:build --publish onTag"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@fortawesome/free-regular-svg-icons": "^5.15.3",
    "@fortawesome/free-solid-svg-icons": "^5.15.3",
    "@fortawesome/vue-fontawesome": "^3.0.0-3",
    "anime-ext": "^1.0.14",
    "electron-updater": "^4.3.9",
    "vue": "^3.0.5",
    "vue-router": "4"
  },
  "devDependencies": {
    "@tailwindcss/jit": "^0.1.18",
    "@vitejs/plugin-vue": "^1.2.2",
    "@vue/compiler-sfc": "^3.0.5",
    "autoprefixer": "^10.2.5",
    "cross-env": "^7.0.3",
    "cross-spawn": "^7.0.3",
    "electron": "^12.0.7",
    "electron-builder": "^22.10.5",
    "electron-icon-builder": "^2.0.1",
    "postcss": "^8.2.15",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.1.2",
    "typescript": "^4.1.3",
    "vite": "^2.3.0",
    "vue-tsc": "^0.0.24"
  }
}
